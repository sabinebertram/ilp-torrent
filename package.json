{
  "name": "ilp-torrent",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "app:build:js": "browserify src/app/static/js/main.js -o src/app/build/bundle.js",
    "app:css:concat": "cat src/app/static/css/*.css > src/app/static/css/bundle.css",
    "app:css:minify": "cleancss src/app/static/css/bundle.css -o src/app/build/bundle.min.css  && rm src/app/static/css/bundle.css",
    "app:build:css": "npm run app:css:concat && npm run app:css:minify",
    "app:build": "npm run app:build:js && npm run app:build:css && copyfiles -u 3 src/app/static/index.html src/app/build",
    "start:app": "node src/app/index.js",
    "start:tracker": "node lib/ilp-bittorrent-tracker/bin/cmd.js",
    "start:receiver": " yarn --cwd ./node_modules/web-monetization/packages/web-monetization-demo install && yarn --cwd ./node_modules/web-monetization/packages/web-monetization-demo receiver:dev",
    "start:verifier": "REDIS_URI=mock SPSP_ENDPOINT=http://localhost:4000/spsp/~niq SPSP_PROXY_PORT=4001 VERIFIER_PORT=4002 receipt-verifier",
    "start:server": "node src/server/index.js" 
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabinebertram/ilp-torrent.git"
  },
  "author": "Sabine Bertram (sabine@coil.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabinebertram/ilp-torrent/issues"
  },
  "homepage": "https://github.com/sabinebertram/ilp-torrent#readme",
  "devDependencies": {
    "browserify": "^16.5.2",
    "clean-css-cli": "^4.3.0",
    "concat-cli": "^4.0.0",
    "copyfiles": "^2.3.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "@coil/receipt-verifier": "^1.0.3",
    "bitfield": "^3.0.0",
    "bittorrent-tracker": "^9.15.0",
    "blob-to-buffer": "^1.2.8",
    "create-torrent": "^4.4.2",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.10",
    "fs-chunk-store": "^2.0.2",
    "immediate-chunk-store": "^2.1.0",
    "magnet-uri": "^5.3.0",
    "node-fetch": "^2.6.0",
    "parse-numeric-range": "^1.2.0",
    "simple-get": "^4.0.0",
    "string2compact": "^1.3.0",
    "torrent-discovery": "^9.3.0",
    "torrent-piece": "^2.0.0",
    "web-monetization": "github:coilhq/web-monetization-projects#main",
    "webtorrent": "^0.108.6",
    "wrtc": "^0.4.6"
  },
  "standard": {
    "ignore": [
      "static"
    ]
  }
}
