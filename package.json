{
  "name": "ilp-torrent",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build:app:js": "browserify src/app/static/js/main.js -o src/app/build/bundle.js",
    "build:app:css": "cat src/app/static/css/*.css > src/app/static/css/bundle.css && cleancss src/app/static/css/bundle.css -o src/app/build/bundle.min.css  && rm src/app/static/css/bundle.css",
    "build:app": "npm run build:app:js && npm run build:app:css && copyfiles -u 3 src/app/static/index.html src/app/build",
    "build:verifier-app:js": "browserify src/verifier-app/static/js/main.js -o src/verifier-app/build/bundle.js",
    "build:verifier-app:css": "cat src/verifier-app/static/css/*.css > src/verifier-app/static/css/bundle.css && cleancss src/verifier-app/static/css/bundle.css -o src/verifier-app/build/bundle.min.css  && rm src/verifier-app/static/css/bundle.css",
    "build:verifier-app": "npm run build:verifier-app:js && npm run build:verifier-app:css && copyfiles -u 3 src/verifier-app/static/index.html src/verifier-app/build",
    "build:verifier-service": "tsc --build src/verifier-service/tsconfig.json",
    "start:app": "node src/app/index.js",
    "start:verifier-app": "node src/verifier-app/index.js",
    "start:tracker": "node lib/ilp-bittorrent-tracker/bin/cmd.js",
    "start:receiver": " yarn --cwd ./node_modules/web-monetization/packages/web-monetization-demo install && yarn --cwd ./node_modules/web-monetization/packages/web-monetization-demo receiver:dev",
    "start:verifier": "REDIS_URI=mock SPSP_ENDPOINT=http://localhost:4000/spsp/~niq SPSP_PROXY_PORT=4001 VERIFIER_PORT=4002 receipt-verifier",
    "start:server": "node src/server/index.js",
    "start:verifier-service": "node src/verifier-service/dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabinebertram/ilp-torrent.git"
  },
  "author": "Sabine Bertram (sabine@coil.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabinebertram/ilp-torrent/issues"
  },
  "homepage": "https://github.com/sabinebertram/ilp-torrent#readme",
  "devDependencies": {
    "@types/http-proxy": "^1.17.4",
    "@types/ioredis": "^4.17.4",
    "@types/jest": "^26.0.13",
    "@types/koa": "^2.11.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.1",
    "@types/node": "^14.6.4",
    "@types/node-fetch": "^2.5.7",
    "@types/redis-mock": "^0.17.0",
    "@types/uuid": "^8.3.0",
    "browserify": "^16.5.2",
    "clean-css-cli": "^4.3.0",
    "concat-cli": "^4.0.0",
    "copyfiles": "^2.3.0",
    "dotenv": "^8.2.0",
    "jest": "^26.4.2",
    "node-fetch": "^2.6.1",
    "replace": "^1.2.0",
    "standard": "^14.3.4",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@coil/receipt-verifier": "^1.0.3",
    "@koa/cors": "^3.1.0",
